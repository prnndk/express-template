{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "inlineSources": true,

      // Set `sourceRoot` to  "/" to strip the build path prefix
      // from generated source code references.
      // This improves issue grouping in Sentry.
      "sourceRoot": "/"
    },
    "lib": ["es2015"]
  }